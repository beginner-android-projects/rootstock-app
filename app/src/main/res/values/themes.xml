<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rootstock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/montserrat</item>
        <item name="textInputStyle">@style/Text.TextInputLayout.Base</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Base</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearence.RoundedRectangle</item>
        <item name="android:ellipsize">end</item>

        <item name="materialAlertDialogTheme">@style/AlertDialog.Theme</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:colorControlActivated">@color/text_additional</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

</resources>