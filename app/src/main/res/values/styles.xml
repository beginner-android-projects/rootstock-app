<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.TextInputLayout.Base" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">132dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="editTextStyle">@style/Text.EditText.Base</item>
    </style>

    <style name="Text.TextInputLayout.Primary" parent="Text.TextInputLayout.Base">
        <item name="android:textColorHint">@color/text_grey</item>
    </style>

    <style name="Text.EditText.Base" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppMaterialButton.Base" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_state_button</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAppearance">@style/AppMaterialButton.Text.Base</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="AppMaterialButton.WhiteBackground" parent="AppMaterialButton.Base">
        <item name="backgroundTint">@color/color_state_button_white</item>
        <item name="android:textColor">@color/primary</item>

    </style>

    <style name="AppMaterialButton.Text.Base" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Info.Bold" parent="TextBase">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextBase" parent="">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Title" parent="TextBase">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProgressBar.Base" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:elevation">30dp</item>
    </style>


    <style name="BaseCardView" parent="Base.CardView">
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="CardView.Workspace" parent="BaseCardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ShapeAppearence.RoundedRectangle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

</resources>